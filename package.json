{
  "name": "brs-fiddle",
  "version": "1.4.3",
  "description": "BrightScript Fiddle",
  "author": "Marcelo Lv Cabral <marcelo@lvcabral.com> (https://lvcabral.com/)",
  "homepage": "https://lvcabral.com/brs/",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvcabral/brs-fiddle"
  },
  "keywords": [
    "brightscript",
    "roku",
    "simulator",
    "sandbox"
  ],
  "license": "MIT",
  "main": "app/index.html",
  "typings": "./types/index.d.ts",
  "scripts": {
    "build": "webpack --env development",
    "release": "webpack --env production",
    "start": "webpack serve --open",
    "clean": "rimraf ./types ./app",
    "lint": "tslint --project .",
    "prettier:write": "prettier --write \"{app,src,test}/**/*.{js,ts}\"",
    "prettier": "prettier --check \"{app,src,test}/**/*.{js,ts}\""
  },
  "dependencies": {
    "brs-engine": "^1.2.6",
    "codemirror": "^5.65.12",
    "json-url": "^3.0.0",
    "nanoid": "^4.0.1",
    "toastify-js": "^1.12.0",
    "vanilla-terminal": "lvcabral/vanilla-terminal"
  },
  "devDependencies": {
    "@types/codemirror": "^5.60.7",
    "@types/nanoid": "^3.0.0",
    "@types/toastify-js": "^1.11.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^5.2.7",
    "html-webpack-plugin": "^5.5.3",
    "npm-run-all": "^4.1.2",
    "prettier": "2",
    "rimraf": "^2.6.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 100
  }
}
