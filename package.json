{
  "name": "brs-fiddle",
  "version": "0.0.1-dev",
  "description": "BrightScript Fiddle",
  "author": "Marcelo Lv Cabral <marcelo@lvcabral.com> (https://lvcabral.com/)",
  "homepage": "https://lvcabral.com/brs/",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvcabral/brs-fiddle"
  },
  "keywords": [
    "brightscript",
    "roku",
    "emulator"
  ],
  "license": "MIT",
  "main": "app/index.html",
  "typings": "./types/index.d.ts",
  "scripts": {
    "build": "webpack --env development",
    "release": "webpack --env production",
    "clean": "rimraf ./types",
    "lint": "tslint --project .",
    "prettier:write": "prettier --write \"{app,src,test}/**/*.{js,ts}\"",
    "prettier": "prettier --check \"{app,src,test}/**/*.{js,ts}\""
  },
  "files": [
    "app/fonts/",
    "app/lib/brsEmu.worker.js"
  ],
  "dependencies": {
    "brs-emu": "^0.10.20-dev",
    "codemirror": "^5.65.12",
    "json-url": "^3.0.0",
    "nanoid": "^4.0.1",
    "toastify-js": "^1.12.0",
    "vanilla-terminal": "lvcabral/vanilla-terminal"
  },
  "devDependencies": {
    "@types/codemirror": "^5.60.7",
    "@types/nanoid": "^3.0.0",
    "@types/toastify-js": "^1.11.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^5.2.7",
    "lint-staged": ">=8",
    "npm-run-all": "^4.1.2",
    "prettier": "2",
    "rimraf": "^2.6.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
